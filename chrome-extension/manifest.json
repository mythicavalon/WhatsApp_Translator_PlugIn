{
  "manifest_version": 3,
  "name": "WhatsApp Flag Translator",
  "version": "1.0.0",
  "description": "Translate WhatsApp messages instantly by reacting with flag emojis",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["../shared/translator-core.js", "content.js"],
      "css": ["../shared/styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "WhatsApp Flag Translator"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["../shared/styles.css"],
      "matches": ["https://web.whatsapp.com/*"]
    }
  ]
}